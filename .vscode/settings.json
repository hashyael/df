{
    // DISABLE ALL OF THE USELESS ANNOYING UI SHIT
    "window.commandCenter": false,
    "workbench.tree.renderIndentGuides": "none",
    "workbench.startupEditor": "none",
    "explorer.compactFolders": false,
    "workbench.editor.showTabs": "single",
    "workbench.panel.opensMaximized": "always",
    "workbench.layoutControl.enabled": false,
    "workbench.statusBar.visible": false,
    "workbench.activityBar.location": "hidden",
    // "window.titleBarStyle": "native",
    // "apc.electron": {
    //     "titleBarStyle": "hiddenInset",
    //     // "trafficLightPosition": {
    //     //     "x": 11,
    //     //     "y": 10
    //     // }
    // },
    "editor.renderWhitespace": "none",
    "editor.snippetSuggestions": "none",
    "editor.bracketPairColorization.enabled": false,
    "editor.unicodeHighlight.invisibleCharacters": false,
    "editor.unicodeHighlight.ambiguousCharacters": false,
    "editor.guides.indentation": false,
    "editor.folding": false,
    "editor.minimap.enabled": false,
    "editor.scrollbar.horizontal": "hidden",
    "editor.scrollbar.vertical": "hidden",
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    // EYES & WRITING
    "workbench.colorTheme": "sema soft",
    "editor.fontFamily": "Monolisa",
    "editor.fontSize": 14,
    "editor.tabSize": 4,
    "editor.lineHeight": 1.5,
    "editor.fontLigatures": false,
    "editor.formatOnSave": true,
    "editor.cursorBlinking": "phase",
    "editor.cursorSmoothCaretAnimation": "on",
    // PLUGINS SETUP
    "errorLens.onSaveTimeout": 500,
    "vscode-neovim.neovimInitVimPaths.darwin": "~/.vscode/nvim/init.lua",
    "vscode-neovim.neovimExecutablePaths.darwin": "\/opt\/homebrew\/bin\/nvim",
    "vscode-neovim.neovimClean": true,
    "go.gopath": "/Users/peopleequalshit/code/go",
    "go.toolsManagement.autoUpdate": true,
    "go.terminal.activateEnvironment": false,
    "go.coverOnTestPackage": false,
    "go.formatTool": "goimports",
    "go.lintTool": "golangci-lint",
    "go.lintFlags": [
        "-checks=all"
    ],
    "gopls": {
        "ui.semanticTokens": true,
        "ui.diagnostic.staticcheck": true,
        "ui.completion.usePlaceholders": true,
    },
    "extensions.experimental.affinity": {
        "asvetliakov.vscode-neovim": 1
    },
    "editor.semanticTokenColorCustomizations": {
        "rules": {
            "comment": "#FDA293",
            "*.readonly": "#F4C1CF",
        }
    },
}