{
	"theme": "pph light",
	"vim_mode": true,
	"cursor_blink": false,
	"formatter": "language_server",
	"tab_size": 2,
	"hard_tabs": true,
	"ui_font_family": "MonoLisa",
	"ui_font_size": 14,
	"buffer_font_family": "MonoLisa",
	"buffer_font_size": 14,
	"show_whitespaces": "none",
	"show_call_status_icon": false,
	"languages": {
		"Go": {
			"tab_size": 4,
			"formatter": {
				"external": {
					"command": "goimports"
				}
			}
		},
		"YAML": {
			"hard_tabs": false
		}
	},
	"lsp": {
		"gopls": {
			"ui.diagnostic.staticcheck": true,
			"ui.completion.usePlaceholders": true,
			"initialization_options": {
				"usePlaceholders": true,
				"buildFlags": [
					"-tags=acceptance"
				]
			}
		}
	},
	"project_panel": {
		"button": false,
		"folder_icons": false,
		"auto_fold_dirs": false,
		"show_diagnostics": "all",
		"scrollbar": {
			"show": "never"
		},
		"indent_guides": {
			"show": "never"
		}
	},
	"terminal": {
		"font_family": "MonoLisa",
		"font_size": 13,
		"button": false,
		"env": {}
	},
	"git": {
		"inline_blame": {
			"show_commit_summary": true
		}
	},
	"scrollbar": {
		"show": "auto"
	},
	"tab_bar": {
		"show": false,
		"show_nav_history_buttons": false
	},
	"buffer_font_features": {
		"liga": false
	},
	"toolbar": {
		"quick_actions": false
	},
	"features": {
		"copilot": false
	},
	"indent_guides": {
		"enabled": false
	},
	"chat_panel": {
		"button": false
	},
	"notification_panel": {
		"button": false
	},
	"collaboration_panel": {
		"button": false
	},
	"telemetry": {
		"diagnostics": false,
		"metrics": false
	}
}
