{
	"theme": "pph dark",
	"show_whitespaces": "none",
	"vim_mode": true,
	"formatter": "language_server",
	"tab_size": 2,
	"hard_tabs": true,
	"ui_font_family": "MonoLisa",
	"ui_font_size": 14,
	"buffer_font_family": "MonoLisa",
	"buffer_font_size": 14,
	"buffer_font_features": {
		"liga": false
	},
	"vim": {
		"use_system_clipboard": "on_yank"
	},
	"languages": {
		"Go": {
			"tab_size": 4,
			"formatter": {
				"external": {
					"command": "goimports",
					"arguments": []
				}
			}
		},
		"YAML": {
			"hard_tabs": false
		}
	},
	"lsp": {
		"gopls": {
			"ui.diagnostic.staticcheck": true,
			"ui.completion.usePlaceholders": true,
			"ui.diagnostic.analyses": {
				"unusedvariable": true,
				"unusedparameter": true
			}
		}
	},
	"terminal": {
		"font_family": "MonoLisa",
		"font_size": 13,
		"button": false,
		"env": {}
	},
	"show_copilot_suggestions": true,
	"show_call_status_icon": false,
	"cursor_blink": false,
	"assistant": {
		"default_model": {
			"provider": "zed.dev",
			"model": "claude-3-5-sonnet-20240620"
		},
		"version": "2",
		"button": true
	},
	"features": {
		"copilot": false
	},
	"indent_guides": {
		"enabled": false
	},
	"project_panel": {
		"button": false,
		"folder_icons": false,
		"auto_fold_dirs": false,
		"indent_guides": {
			"show": "never"
		}
	},
	"chat_panel": {
		"button": false
	},
	"notification_panel": {
		"button": false
	},
	"collaboration_panel": {
		"button": false
	},
	"toolbar": {
		"breadcrumbs": true,
		"quick_actions": false
	},
	"tab_bar": {
		"show": false,
		"show_nav_history_buttons": false
	},
	"telemetry": {
		"diagnostics": false,
		"metrics": false
	}
}
